{
  "name": "timezone-converter",
  "version": "1.0.0",
  "description": "A cross-platform desktop timezone converter built with Electron",
  "main": "dist/main.js",
  "homepage": "https://github.com/Fiction000/timezone-converter",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "release": "npm run build && electron-builder --publish=always",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["timezone", "converter", "electron", "desktop", "time"],
  "author": "Fiction000",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.1.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "moment-timezone": "^0.6.0"
  },
  "build": {
    "appId": "com.fiction000.timezone-converter",
    "productName": "Timezone Converter",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "renderer/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "dist/main.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "Fiction000",
      "repo": "timezone-converter"
    }
  }
}
